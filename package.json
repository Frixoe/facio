{
  "name": "facio",
  "productName": "Facio",
  "version": "1.0.0",
  "private": true,
  "description": "An easy-to-use free and open-source facial recognition software.",
  "main": "./src/main.js",
  "scripts": {
    "postinstall": "./node-modules/.bin/electron-builder install-app-deps",
    "pack": "./node_modules/.bin/electron-builder --dir",
    "dist": "./node_modules/.bin/electron-builder --win --mac --linux",
    "start": "node ./src/crawlPages.js && run-electron .",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "Suryansh S. <business.suryansh@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "ajv": "^6.5.4",
    "chokidar": "^2.0.4",
    "electron-better-ipc": "^0.1.1",
    "electron-context-menu": "^0.10.0",
    "electron-debug": "^2.0.0",
    "electron-dl": "^1.12.0",
    "electron-is-dev": "^1.0.1",
    "electron-store": "^2.0.0",
    "electron-unhandled": "^1.1.0",
    "electron-util": "^0.10.0",
    "face-api.js": "^0.15.0",
    "jquery": "^3.3.1",
    "electron-timber": "^0.5.1",
    "run-electron": "^0.1.0"
  },
  "devDependencies": {
    "electron": "^3.0.5",
    "electron-reloader": "^0.2.0",
    "electron-builder": "^20.28.4",
    "standard": "^12.0.1"
  },
  "build": {
    "files": [
      "src/**/*"
    ],
    "appId": "com.suryanshs.facio",
    "mac": {
      "category": "public.app-category.facial-recognition"
    },
    "compression": "normal"
  }
}
